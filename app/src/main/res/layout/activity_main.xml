<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <!-- dog - top left -->
    <ImageView
        android:id="@+id/image_dog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/shiba_inu"
        android:src="@drawable/shiba_inu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Capybara - top right -->
    <ImageView
        android:id="@+id/image_capybara"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/capybara"
        android:src="@drawable/capybara"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cats - bottom centered -->
    <ImageView
        android:id="@+id/image_cats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/group_of_cats"
        android:scaleType="fitXY"
        android:src="@drawable/group_of_cats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- container for text and button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Touch on one of the animal icons"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear text"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/main_button"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

